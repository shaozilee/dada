<!DOCTYPE html>
<html>
  <head>
    <title>Easy API Platform</title>
    <% include("_common.btl"){} %>
    <link rel="stylesheet" type="text/css" href="${ctxPath}/${theme}/css/post_new.css">
    <link rel="stylesheet" type="text/css" href="${ctxPath}/${theme}/js/ue/themes/default/css/umeditor.css">
  </head>
  <body>
    <% include("_header.btl"){} %>
    <div class="container">
      <div class="post-box">
        <form action="${ctxPath}/post/add.html" method="post" id="j-post">
          <input type="hidden" name="sid" value='${section.sid!}'>
          <input type="hidden" name="pid" value='${post.pid!}'>
          <input type="hidden" name="message" value="${post.message!}">

          <div class="title">
            <input type="text" class="title-input" name="subject" value='${post.subject!}'>
            <span class="title-label">标题：</span>
          </div>
          <div class="right-box">
          </div>

          <div class="content">
            <!--style给定宽度可以影响编辑器的最终宽度-->
            <script type="text/plain" id="myEditor" style="width:700px;height:600px;border: 1px #d4d4d4 solid;">
              ${ post.message!"<p>这里我可以写一些输入提示</p>" }
            </script>
          </div>

          <div class="post-bottom clearfix">
            <a class="btn post-btn">提交发布</a>
          </div>

        </form>
      </div>

    </div>

    <% include("_commonjs.btl"){} %>
    <script type="text/javascript" src="${ctxPath}/${theme}/js/ue/umeditor.config.js"></script>
    <script type="text/javascript" src="${ctxPath}/${theme}/js/ue/umeditor.min.js"></script>
    <script type="text/javascript" src="${ctxPath}/${theme}/js/ue/lang/zh-cn/zh-cn.js"></script>
    <script type="text/javascript" src="${ctxPath}/${theme}/js/post-new.js" ></script>

  </body>
</html>
