<!DOCTYPE html>
<html>
<head>
  <title>注册成为会员</title>
  <% include("_common.btl"){} %>
  <link rel="stylesheet" href="${ctxPath}/${theme}/css/regist.css">

</head>
<body>
<% include("_header.btl"){} %>
<div style="padding-top: 60px;">
  <div style="margin:0 auto;width:340px;padding:40px;border-radius: 10px;border:1px #cccccc solid;overflow: hidden;">
    <div id="mainPanel" class="panel show">
      <div class="row">
        <input type="text" id="email" class="focus-input"/>
        <label>邮箱</label>
      </div>
      <div class="row">
        <input type="text" id="userName" class="focus-input"/>
        <label>昵称</label>
      </div>
      <div class="row">
        <input type="password" id="password" class="focus-input" maxlength="32"/>
        <label>密码</label>
      </div>
      <div class="row">
        <a href="javascript:void(0);" class="btn regist-btn" style="float: right;" id="registBtn">提交注册</a>
      </div>

      <div id="errorMsg" class="error-msg">
      </div>

    </div>

    <div id="resultPanel" class="panel">
      <div class="row msg" style="text-align: center;"></div>
      <div class="row">
        <a href="login.html" class="btn ok-btn" target="_self">我要去登录</a>
      </div>
    </div>

  </div>

</div>

<% include("_commonjs.btl"){} %>
<script type="text/javascript" src="${ctxPath}/${theme}/js/regist.js"></script>


</body>
</html>