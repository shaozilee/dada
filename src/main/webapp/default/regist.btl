<!DOCTYPE html>
<html>
<head>
  <title>Easy API Platform</title>
  <% include("_common.btl"){} %>
  <style type="text/css">
    .panel{
      display: none;
    }
    .show{
      display: block;
    }
    .row{
      height: 40px;
      line-height: 40px;
      margin-bottom: 20px;
      position: relative;
    }

    .row input{
      width: 100%;
      height: 40px;
      line-height: 40px;
      font-size: 16px;
      color: #888;
      background: #efefef;
      border-radius: 4px;
      border: none;
      overflow: hidden;
      text-indent: 50px;
    }

    .row label{
      position: absolute;
      left: 10px;
      top: 0px;
      width: 40px;
      line-height: 40px;
      height: 40px;
      font-size: 14px;
      color: #444;
    }

    .regist-btn{
      float: left;
      background-color: #2c9d7a;
      width: 100%;
    }

    .regist-btn:hover{
      background-color: #60b395;
    }


    .ok-btn{
      float: left;
      width: 160px;
      margin-left: 90px;
    }

  </style>
</head>
<body>
<% include("_header.btl"){} %>
<div style="padding-top: 60px;">
  <div style="margin:0 auto;width:340px;padding:40px;border-radius: 10px;border:1px #cccccc solid;overflow: hidden;">
    <div id="mainPanel" class="panel show">
      <div class="row">
        <input type="text" id="email"/>
        <label>邮箱</label>
      </div>
      <div class="row">
        <input type="password" id="password"/>
        <label>密码</label>
      </div>
      <div class="row">
        <input type="text" id="userName"/>
        <label>昵称</label>
      </div>
      <div class="row">
        <a href="javascript:void(0);" class="btn regist-btn" style="float: right;" id="registBtn">提交注册</a>
      </div>

      <div id="errorMsg">
      </div>

    </div>

    <div id="resultPanel" class="panel">
      <div class="row msg" style="text-align: center;"></div>
      <div class="row">
        <a href="login.html" class="btn ok-btn" target="_self">我要去登录</a>
      </div>
    </div>

  </div>





</div>

<% include("_commonjs.btl"){} %>

<script type="text/javascript">
  $("#registBtn").click(function(){
    var param = {
      email:$("#email").val(),
      userName:$("#userName").val(),
      password: $("#password").val()
    };

    $.post(DA.ROOT+"/doRegist.do", param, function (resp) {
      resp = JSON.parse(resp);
      if(resp.code === "0000"){
        $("#mainPanel").removeClass("show");
        $("#resultPanel").addClass("show");
        $("#resultPanel .msg").text("恭喜您注册成功!");
      }else{
        $("#errorMsg").text(resp.msg);
      }
    });
  });

</script>

</body>
</html>