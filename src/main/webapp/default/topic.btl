<!DOCTYPE html>
<html>
  <head>
    <title>Easy API Platform</title>
    <% include("_common.btl"){} %>
    <link rel="stylesheet" href="${ctxPath}/${theme}/css/index.css">
  </head>
  <body>
    <% include("_header.btl"){} %>
    <div>
        ${postList}

        <div>
            回复：<input type="text" id="replyText"><button id="replyBtn">提交</button>

        </div>
    </div>

    <% include("_commonjs.btl"){} %>

    <script type="text/javascript">

        $("#replyBtn").click(function(){
            var param = {
                pid:$(this).data("pid"),
                message: $("#replyText").val()
            };

            $.post(DA.ROOT+"/post/save.do", param, function (data) {
                console.log(data);
            });
        });

    </script>

  </body>
</html>
