<!DOCTYPE html>
<html>
  <head>
    <title>Easy API Platform</title>
    <% include("_common.btl"){} %>
    <link rel="stylesheet" href="${ctxPath}/${theme}/css/topic.css">
  </head>
  <body>
    <% include("_header.btl"){} %>
    <div class="page">
      <div class="page-wrap">
        <div class="post-title clearfix">
          <h1>${topic.subject}</h1>
        </div>

        <ul>
          <% for(post in postList){%>
          <li>
            ${post.message}
          </li>
          <% }%>
        </ul>

        <div class="reply-box">
          回复：<input type="text" id="replyText"><button id="replyBtn" data-tid="${tid}">提交</button>

        </div>
      </div>
    </div>

    <% include("_commonjs.btl"){} %>

    <script type="text/javascript">

        $("#replyBtn").click(function(){
            var param = {
                tid:$(this).data("tid"),
                message: $("#replyText").val()
            };

            $.post(DA.ROOT+"/post/save.do", param, function (data) {
                console.log(data);
            });
        });

    </script>

  </body>
</html>
